{
  "name": "hwf-automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Use: npm run ios or npm run android\"",
    "ios": "wdio run wdio.ios.conf.ts",
    "android": "wdio run wdio.android.conf.ts",
    "both": "npm run android && npm run ios",

    "ios:skip": "wdio run wdio.ios.conf.ts --spec ./src/tests/onboardingSkip.spec.ts",
    "ios:complete": "wdio run wdio.ios.conf.ts --spec ./src/tests/onboardingComplete.spec.ts",

    "android:skip": "wdio run wdio.android.conf.ts --spec ./src/tests/onboardingSkip.spec.ts",
    "android:complete": "wdio run wdio.android.conf.ts --spec ./src/tests/onboardingComplete.spec.ts",
    "android:create": "wdio run wdio.android.conf.ts --spec ./src/tests/createCheckin.spec.ts",
    "android:emotions": "npx wdio run wdio.android.conf.ts --spec './src/tests/createCheckinsQuadrants.spec.ts'",
    "android:edit": "npx wdio run wdio.android.conf.ts --spec './src/tests/editCheckin.spec.ts'",
    "android:delete": "npx wdio run wdio.android.conf.ts --spec './src/tests/deleteCheckin.spec.ts'",    
    "android:pastDate": "npx wdio run wdio.android.conf.ts --spec './src/tests/createCheckinPastdate.spec.ts'",
    
    "android:healthData": "npx wdio run wdio.android.conf.ts --spec './src/tests/createCheckinHealthData.spec.ts'",

    "android:share": "npx wdio run wdio.android.conf.ts --spec './src/tests/shareCheckin.spec.ts'",
    "android:multiple": "npx wdio run wdio.android.conf.ts --spec './src/tests/createCheckinMultipleFeelings.spec.ts'",
    "android:reflect": "npx wdio run wdio.android.conf.ts --spec './src/tests/createCheckinReflect.spec.ts'",
    "android:takeaways": "npx wdio run wdio.android.conf.ts --spec './src/tests/createCheckinWithTakeaways.spec.ts'",

    "test:ios": "wdio run wdio.ios.conf.ts",
    "test:ios:spec": "wdio run wdio.ios.conf.ts --spec",
    "test:android": "wdio run wdio.android.conf.ts",
    "test:android:spec": "wdio run wdio.android.conf.ts --spec",
    "test:all": "npm run test:android && npm run test:ios",

    "appium:android": "appium server --port 4723",
    "appium:ios": "appium server --port 4724",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:report": "npm run allure:serve",

    "allure:serve:android": "allure serve allure-results-android",
    "allure:serve:ios": "allure serve allure-results-ios",
    "test:android:report": "npm run android && npm run allure:serve:android",
    "test:ios:report": "npm run ios && npm run allure:serve:ios"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/jasmine": "^5.1.8",
    "@types/node": "^24.0.1",
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/appium-service": "^9.15.0",
    "@wdio/cli": "^9.15.0",
    "@wdio/jasmine-framework": "^9.15.0",
    "@wdio/local-runner": "^9.15.0",
    "@wdio/spec-reporter": "^9.15.0",
    "@wdio/types": "^9.15.0",
    "allure-commandline": "^2.34.1",
    "appium": "^2.0.1",
    "appium-uiautomator2-driver": "^4.2.3",
    "appium-xcuitest-driver": "^9.7.0",
    "dotenv": "^16.5.0",
    "expect-webdriverio": "^5.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}